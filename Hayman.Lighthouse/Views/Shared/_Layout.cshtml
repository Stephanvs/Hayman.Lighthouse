@using Microsoft.Web.Optimization
<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html lang="en">
<!--<![endif]-->
<head>
	<meta charset="utf-8" />
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<!-- Included CSS Files -->
	<!-- Combine and Compress These CSS Files -->
	@if (HttpContext.Current.IsDebuggingEnabled)
 {
		<link href="@Url.Content("~/Content/core/globals.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/core/typography.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/core/grid.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/core/forms.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/core/orbit.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/core/reveal.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/core/ui.css")" rel="stylesheet" type="text/css" />   
 }
 else
 {
		<link href="@BundleTable.Bundles.ResolveBundleUrl("~/Content/core")" rel="stylesheet" type="text/css" />
 }
	<!-- End Combine and Compress These CSS Files -->
	<link href="@Url.Content("~/Content/mobile.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/core/app.css")" rel="stylesheet" type="text/css" />
	<!--[if lt IE 9]>
		<link rel="stylesheet" href="@Url.Content("~/Content/ie.css")">
	<![endif]-->
	<!-- IE Fix for HTML5 Tags -->
	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>
	<div id="topbar" class="container">
		<div class="row">
			<div class="four columns">
				<h1>
					<span class="hayman-logo-text">Hayman.</span> <span class="hayman-logo-highlight">Lighthouse</span>
				</h1>
			</div>
			<div class="eight columns hide-on-phones">
				<strong class="right">
					<a href="">Features</a>
					<a href="">Case Studies</a>
					<a href="">Documentation</a>
					<a href="">Sign out</a>
					<a href="" class="small blue nice button">Download</a>
				</strong>
			</div>
		</div>
	</div>
	<!-- container -->
	<div class="container">
		@RenderBody()
	</div>
	<!-- container -->
	<!-- Included JS Files -->
	<!-- Combine and Compress These JS Files -->
	@if (HttpContext.Current.IsDebuggingEnabled)
 {
		<script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery.reveal.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery.orbit-1.3.0.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/forms.jquery.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery.customforms.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Scripts/jquery.placeholder.min.js")" type="text/javascript"></script>
 }
 else
 {
		<script src="@BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")" type="text/javascript"></script>
 }
	<!-- End Combine and Compress These JS Files -->
</body>
</html>
