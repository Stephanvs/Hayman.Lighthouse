@{
	// Styles
	Bundles.Reference("Styles/core");
	Bundles.Reference("Styles/app");
	Bundles.Reference("Styles/lib");
	
	// Fonts
	Bundles.Reference("font-ptsans");
	Bundles.Reference("font-opensans");

	// Scripts
	Bundles.Reference("Scripts/app");
