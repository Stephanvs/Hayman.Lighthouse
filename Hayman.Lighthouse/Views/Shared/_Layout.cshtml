<body>
	<div id="topbar" class="container">
		<div class="row">
			<div class="four columns">
				<h1>
					<span class="hayman-logo-text">Hayman.</span> <span class="hayman-logo-highlight">Lighthouse</span>
				</h1>
			</div>
			<div class="eight columns hide-on-phones">
				<strong class="right">
					<a href="">Features</a>
					<a href="">Case Studies</a>
					<a href="">Documentation</a>
					<a href="">Sign out</a>
					<a href="" class="small blue nice button">Download</a>
				</strong>
			</div>
		</div>
	</div>
	<!-- container -->
	<div class="container">
		@RenderBody()
	</div>
	<!-- container -->

	<!-- Included JS Files -->
	@Assets.Scripts.Render()

</body>
</html>
